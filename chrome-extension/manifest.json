{
  "name": "Pending name Extension",
  "description": "This is the PennyDrop extension. Yeet.",
  "version": "1.0",
  "manifest_version": 2,
  "icons": { "16": "images/icon16.png", "48": "images/icon48.png", "128": "images/icon128.png" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"]
    }
  ],
  "browser_action": {
    "default_title": "PennyDrop Extension"
  },
  "background": {
    "scripts": ["js/background.js"]
  },
  "permissions": ["tabs"]
}